---
import "swiper/css";
import "swiper/css/navigation";
import "swiper/css/pagination";
---

<div class="container px-5 py-16 mx-auto">
  <div class="text-center mb-10">
    <h1 class="sm:text-3xl text-2xl font-medium title-font text-gray-900 mb-4">
      A Peek Inside Our Store
    </h1>
    <div class="w-16 h-1 rounded-full bg-yellow-700 mx-auto mb-4"></div>
    <p
      class="text-base leading-relaxed xl:w-2/4 lg:w-3/4 mx-auto text-gray-500"
    >
      Explore the heart of Supreme Trading Co. â€” shelves stacked with quality,
      aisles full of promise.
    </p>
  </div>

  <div class="swiper mySwiper relative rounded-lg overflow-hidden">
    <div class="swiper-wrapper">
      <div class="swiper-slide relative select-none"
        oncontextmenu="return false">
        <img
          src="/images/1.jpg"
          class="w-full h-[300px] md:h-[500px] object-cover pointer-events-none"
          alt="Shop Image 1"
        />
        <div class="absolute inset-0 z-10"></div>
      </div>
      <div class="swiper-slide relative select-none"
        oncontextmenu="return false">
        <img
          src="/images/2.jpg"
          class="w-full h-[300px] md:h-[500px] object-cover pointer-events-none"
          alt="Shop Image 2"
        />
        <div class="absolute inset-0 z-10"></div>
      </div>
      <div class="swiper-slide relative select-none"
        oncontextmenu="return false">
        <img
          src="/images/3.jpg"
          class="w-full h-[300px] md:h-[500px] object-cover pointer-events-none"
          alt="Shop Image 3"
        />
        <div class="absolute inset-0 z-10"></div>
      </div>
      <div class="swiper-slide relative select-none"
        oncontextmenu="return false">
        <img
          src="/images/4.jpg"
          class="w-full h-[300px] md:h-[500px] object-cover pointer-events-none"
          alt="Shop Image 3"
        />
        <div class="absolute inset-0 z-10"></div>
      </div>
      <div class="swiper-slide relative select-none"
        oncontextmenu="return false">
        <img
          src="/images/5.jpg"
          class="w-full h-[300px] md:h-[500px] object-cover pointer-events-none"
          alt="Shop Image 3"
        />
        <div class="absolute inset-0 z-10"></div>
      </div>
      <div class="swiper-slide relative select-none"
        oncontextmenu="return false">
        <img
          src="/images/6.jpg"
          class="w-full h-[300px] md:h-[500px] object-cover pointer-events-none"
          alt="Shop Image 3"
        />
        <div class="absolute inset-0 z-10"></div>
      </div>
      <div class="swiper-slide relative select-none"
        oncontextmenu="return false">
        <img
          src="/images/7.jpg"
          class="w-full h-[300px] md:h-[500px] object-cover pointer-events-none"
          alt="Shop Image 3"
        />
        <div class="absolute inset-0 z-10"></div>
      </div>
      <div class="swiper-slide relative select-none"
        oncontextmenu="return false">
        <img
          src="/images/8.jpg"
          class="w-full h-[300px] md:h-[500px] object-cover pointer-events-none"
          alt="Shop Image 3"
        />
        <div class="absolute inset-0 z-10"></div>
      </div>
      <div class="swiper-slide relative select-none"
        oncontextmenu="return false">
        <img
          src="/images/9.jpg"
          class="w-full h-[300px] md:h-[500px] object-cover pointer-events-none"
          alt="Shop Image 3"
        />
        <div class="absolute inset-0 z-10"></div>
      </div>
    </div>

    <div class="swiper-pagination !text-gray-300 mt-4"></div>
    <div class="swiper-button-next !text-gray-300 z-10"></div>
    <div class="swiper-button-prev !text-gray-300 z-10"></div>
  </div>
</div>

<!-- Swiper CDN -->
<script
  src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"
  onload="initSwiper()"
  defer></script>

<!-- Safe Swiper Initialization -->
<script is:inline>
  function initSwiper() {
    if (typeof Swiper === "undefined") {
      console.error("Swiper failed to load.");
      return;
    }

    new Swiper(".mySwiper", {
      loop: true,
      autoplay: {
        delay: 3000,
        disableOnInteraction: false,
      },
      pagination: {
        el: ".swiper-pagination",
        clickable: true,
      },
      navigation: {
        nextEl: ".swiper-button-next",
        prevEl: ".swiper-button-prev",
      },
    });
  }
</script>

<style>
  :global(.swiper-pagination-bullet) {
    background-color: #d1d5db !important; /* Tailwind: gray-300 */
    opacity: 1 !important;
  }

  :global(.swiper-pagination-bullet-active) {
    background-color: #946e54 !important; /* Tailwind: yellow-400 */
  }
</style>